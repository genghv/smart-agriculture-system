# 环境变量配置文件示例
# 复制此文件为 .env 并填入实际配置值

# 应用配置
APP_NAME=Smart Agriculture System
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_PATH=./data/database/agriculture.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# AI/LLM 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
LLM_TIMEOUT=300
LLM_MAX_RETRIES=3

# 加密配置
MASTER_KEY=your_32_character_master_key_here
ENCRYPTION_ALGORITHM=AES-256-GCM
KEY_ROTATION_DAYS=90

# JWT 配置
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# 权限配置
RBAC_CACHE_TIMEOUT=3600
DEFAULT_USER_ROLE=viewer
ADMIN_EMAIL=admin@example.com

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./data/logs/application.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# 安全配置
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_PER_MINUTE=100

# MCP 配置
MCP_TOOLS_REGISTRY_PATH=./data/mcp/tools.json
MCP_MAX_EXECUTION_TIME=30
MCP_SANDBOX_ENABLED=true

# 监控配置
METRICS_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
PROMETHEUS_PORT=9090

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./data/backups/